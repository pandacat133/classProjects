html
    head
        style
            include style.css
    body
        div
            table
                tr
                    th First Name
                    th Last Name
                    th Email Address
                    th Address
                    th Age
                    th Edit User
                    th Delete User
                each user in myUser
                    tr
                        td #{user.firstName}
                        td #{user.lastName}
                        td #{user.emailAddress}
                        td #{user.address}
                        td #{user.age}
                        td
                            a(href=`/editUser/${user._id}`) Edit User
                        td
                            a(href=`/deleteUser/${user._id}`) Delete User
            div
                a(href="/addUser") Add User
            div
                a(href="/alphabetizeAscending") Alphabetize Ascending
            div
                a(href="/alphabetizeDescending") Alphabetize Descending
            div
                form(action='/search' method="post")
                    td
                        input(placeholder="Search User..." type="text" name="search")
                    td
                        input(class="submitButton" type="submit" value="Search User")